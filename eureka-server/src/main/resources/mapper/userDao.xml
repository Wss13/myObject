<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.UserMapper">
    <resultMap id="resultMap" type="com.example.dto.User">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="sex" column="sex"/>
    </resultMap>
    <select id="isPassLoginCheck" resultType="java.lang.Integer" parameterType="java.util.Map">
        SELECT count(*) FROM t_user t WHERE t.username = #{email} AND t.password = #{password}
    </select>
    <insert id="insertBatchUser" parameterType="java.util.List">
        INSERT INTO t_user (
        username,
        id,
        password,sex) VALUES <foreach collection="userList" separator="," item="user">
        (
        #{user.username},#{user.id},#{user.password},#{user.sex}
        )
    </foreach>
    </insert>

    <insert id="insertUser" parameterType="com.example.dto.User">
        INSERT INTO t_user (
        username,
        id,
        password,sex) VALUES
        (
        #{user.username},#{user.id},#{user.password},#{user.sex}
        )
    </insert>
</mapper>